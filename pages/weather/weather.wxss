/* pages/weather/weather.wxss */
/* ------- top city --------- */

.top_city {
  align-items: center;
  background: #42c642;
  padding-top:13px;
text-align:center
  
}


.city_item{
  color: #fff;
  font-size: 43rpx;
  padding-top: 5rpx;
}


/* ------- today --------- */

.today {
  padding: 50rpx 0 60rpx 0;
  display: flex;
  height:210px;
  flex-direction: column;
  align-items: center;
  background: #42c642;
}

.today .weather .pic {
width:110rpx;
height:110rpx;

}
.desc{
  color: white;
}
.today .weather .desc{
  display: flex; 
  flex-direction: column; 
  margin-right: 20rpx;
}
.today .weather .desc text {
  color: #fff;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.today .temperature {
  color: #faf9fa;

font-size:100rpx;
margin:46rpx 0;

}
.today .more {
  color: #faf9fa;
  font-size: 25rpx;
  margin-top:60rpx;

}
.today .more text {
  padding: 0 10rpx;
}
.today-bottom {
  background: #faf9fa;
  width: 150%;
  height: 300rpx;
  border-radius: 150%;
  margin: -50rpx 0 0 0;
  margin-left:-25%;
}

.hourly {
  width:100%;
  height: 308rpx;
  white-space: nowrap; 
  display: flex; 
  background-color: white;
}
/*小时天气  */
.oneHourly {
  height: 100%;
  width: 150rpx;
  display: inline-block;  
  /* background-color: blue; */
  /* letter-spacing:4px;   */
  font-size:30rpx;  
}
.oneHourlyFlex {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-top: 10%;
  margin-bottom: 10%;
}
.hourlyDate {
  text-align: center;
  color: #4B4B4B;
  font-size: 30rpx;
  font-family: "SFUIDisplay-Regular";
}
.hourlyImg {
  width: 64rpx;
  height: 64rpx;
  text-align: center;
}
.hourlyTmp {
  text-align: center;
  color: #4B4B4B;
  font-size: 30rpx;
  font-family: "PingFangSC-Semibold";
}
.hourlyWind {
  text-align: center;
  color: #4B4B4B;
  font-size: 28rpx;
  font-family: "PingFangSC-Medium";
  display: flex;
  align-items: center;
  justify-content: center; 
}

.hourlyWind image {
  width: 16rpx;
  height: 28rpx;
  margin-right: 5rpx;
}
/*daily  */
.dailyForecast {
  margin-top: 40rpx; 
  font-family: "PingFangSC-Medium"; 
}
.daily {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: white;
  text-align: center;
}
.dailyDate {
   text-align: left; 
   width: 25%;
   color: #4B4B4B;
   font-size: 30rpx;
   margin-left: 5%;
}
.dailyImg {
  margin-left: 100rpx;
  margin-right: 40rpx;
  width: 64rpx;
  height: 80%;
}
.dailyCond {
   text-align: left; 
   width: 40%;
   color: #4B4B4B;
   font-size: 30rpx;
}
.dailyTmp {
   text-align: center; 
   width: 40%;
   font-size: 30rpx;
   font-family: "PingFangSC-Semibold";
}