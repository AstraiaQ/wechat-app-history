/* pages/other/other.wxss */
.personal-top{
  width:100%;
  height: 300rpx;
}
.personal-top-image{
  width:19%;
  height: 150rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 60rpx;
}
.personal-top-image image{
  width:100%;
  height:100%;
  border-radius: 75rpx;
}
.personal-top-text{
  font-size: 12px;
  color: #888;
  font-weight:bold;
  margin-top: 40rpx;
  width: 100%;
  text-align: center;
}
.personal-middle{
  width: 100%;
  height: 450rpx;
  border-top: 1px #f7f7f7 solid;
  border-bottom: 1px #f7f7f7 solid;
}
.per-mid-list1,.per-mid-list2,.per-mid-list3{
  border-bottom: 1px #f7f7f7 solid;
  margin-top: 15px;
  width: 90%;
  float: right;
  height: 19.5%;
}
.per-mid-list4,.per-mid-list5{
  width: 90%;
  float: right;
  height: 20%;
}
.per-mid-list4{
  border-bottom: 1px #f7f7f7 solid;
}

.per-mid-list-left{
  width:40%;
  height:100%;
  float: left;
}
.per-mid-list-left image{
  width: 30%;
  height: 100%;
  float: left;
}
.per-mid-list-left-text{
  color: #888;
  font-size: 13px;
  line-height: 90rpx;
  width: 60%;
  height: 100%;
  float: right;
}

.per-mid-list-right{
  width:40%;
  height:100%;
  float: right;
}
.per-mid-list-right image{
  width: 30%;
  height: 100%;
  float: right;
}