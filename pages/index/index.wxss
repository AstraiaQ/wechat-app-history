/*滚动天气  */

.swiper_container {
  margin-left: 8px;
  height: 55rpx;
  width: 90%;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  margin-top: 5px;
  color: #818291;
}

.zan-panel {
  margin-top: 1px;
}

.zan-btn {
  background: #515151;
  color: #fff;
}

.zan-cell__bd {
  color: #8f8f8f;
}

.items-list {
  margin-top: 5px;
  width: 100%;
  height: 100rpx;
  box-shadow: 0px 0px 7px rgba(55, 55, 55, 0.5);
}

.zan-pull-right {
  flex: 6;
}

