.zan-btn ul {
  height: 50px;
}

.zan-btn ul li {
  text-align: left;
  height: 50px;
  line-height: 50px;
  list-style-type: none;
  float: left;
}

.zan-btn ul li image {
  height: 50px;
  width: 50px;
  float: right;
}
